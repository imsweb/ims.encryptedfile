<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n">
    <object name="object_buttons" meta_type="CMF Action Category">
        <object name="encrypt_file" meta_type="CMF Action" i18n:domain="plone">
            <property name="title" i18n:translate="">Encrypt File</property>
            <property name="description" i18n:translate="">Password protect this file</property>
            <property name="url_expr">string:${plone_context_state/canonical_object_url}/@@encrypt_file</property>
            <property name="available_expr">object/@@encrypt_utils/encrypt_file</property>
            <property name="permissions">
                <element value="Modify portal content"/>
            </property>
            <property name="visible">True</property>
        </object>
        <object name="encrypt_directory" meta_type="CMF Action" i18n:domain="plone">
            <property name="title" i18n:translate="">Encrypt Directory</property>
            <property name="description" i18n:translate="">Password protect all files in this directory</property>
            <property name="url_expr">string:${plone_context_state/canonical_object_url}/@@encrypt_directory</property>
            <property name="available_expr">object/@@encrypt_utils/encrypt_directory</property>
            <property name="permissions">
                <element value="Modify portal content"/>
            </property>
            <property name="visible">True</property>
        </object>
    </object>
</object>